{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "no-restricted-syntax": 0,
        "no-plusplus": [
            2, 
            { "allowForLoopAfterthoughts": true }
        ],
        "guard-for-in": 0
    }
}
